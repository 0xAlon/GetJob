<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:viewBindingIgnore="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            style="@style/back_button"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_back" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    style="@style/text"
                    android:text="שם" />
                <EditText
                    android:id="@+id/name_field"
                    style="@style/text_field"
                    android:inputType="textPersonName" />
                <TextView
                    android:id="@+id/old_password"
                    style="@style/text"
                    android:text="סיסמא ישנה" />

                <EditText
                    android:id="@+id/old_password_field"
                    style="@style/text_field"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/password"
                    style="@style/text"
                    android:text="סיסמא" />

                <EditText
                    android:id="@+id/password_field"
                    style="@style/text_field"
                    android:inputType="textPassword" />

                <TextView
                    android:id="@+id/email"
                    style="@style/text"
                    android:text="מייל" />

                <EditText
                    android:id="@+id/email_field"
                    style="@style/text_field"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/address"
                    style="@style/text"
                    android:text="כתובת" />

                <EditText
                    android:id="@+id/address_field"
                    style="@style/text_field"
                    android:inputType="textAutoCorrect" />

                <TextView
                    android:id="@+id/phone"
                    style="@style/text"
                    android:text="פלאפון" />

                <EditText
                    android:id="@+id/phone_field"
                    style="@style/text_field"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/id"
                    style="@style/text"
                    android:text="תעודת זהות" />

                <EditText
                    android:id="@+id/id_field"
                    style="@style/text_field"
                    android:inputType="numberSigned" />

                <TextView
                    android:id="@+id/age"
                    style="@style/text"
                    android:text="גיל" />

                <EditText
                    android:id="@+id/age_field"
                    style="@style/text_field"
                    android:inputType="numberSigned" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="2">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/save_edit_profile"
                        style="@style/button_2"
                        android:text="שמור שינוי"
                        />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/delete_user"
                        style="@style/button_2"
                        android:text="מחק משתמש"
                        android:backgroundTint="@android:color/holo_red_light"/>

                        />
                </LinearLayout>


            </LinearLayout>

        </ScrollView>



    </LinearLayout>
</LinearLayout>


