<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team3.getjob">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.GetJob">
        <activity android:name=".EditProfile" />
        <activity
            android:name=".JobAction"
            android:parentActivityName=".EmployerProfile" />
        <activity android:name=".EmployeeProfile" />
        <activity
            android:name=".AddJobWindow"
            android:parentActivityName=".EmployerProfile" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Jobs_Pull"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Filter"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Age"
            android:screenOrientation="portrait" />

        <activity
            android:name=".PaymentActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".LanguagesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".rank_filter"
            android:screenOrientation="portrait" />

        <activity
            android:name=".About"
            android:screenOrientation="portrait" />

        <activity
            android:name=".EmployerProfile"
            android:screenOrientation="portrait" />


    </application>


</manifest>